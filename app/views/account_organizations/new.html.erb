<div class="row">
  <div class="large-6 small-12 columns">
  </div>
</div>

<div class="row">
  <div class="large-6 columns">

    <%= simple_form_for [@organization, @account_organization] do |f| %>
    
      <% if @account_organization.errors.any? %>
        <div id="error_explanation">
	        <h2><%= pluralize(@account_organization.errors.count, "error") %> prohibited this worksheet from being saved:</h2>

	        <ul>
		        <% @account_organization.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		        <% end %>
	        </ul>
        </div>
      <% end %>
      
      <p>Add account to <%= @organization.name %></p>
      <div class="row">
        <div class="large-9 small-9 columns">
          <%= label_tag :email %>
          <%= text_field_tag :email %>
          <%= f.input :role, collection: ["Employee", "Admin"], include_blank: false %>
          <%= f.button :submit, "Add Account" %>
        </div>
      </div>
    <% end %>

  </div>
</div>
