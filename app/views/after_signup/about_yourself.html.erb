<div class="row">
  <div class="large-6 columns">
    <%= render "breadcrumbs", breadcrumbs_step: "yourself"%>
    <h3><%= t :please_tell_us_more_about_yourself %></h3>
    <%= simple_form_for @employee, wrapper: :custom, url: wizard_path, method: "put" do |f| %>
      <%= f.input :last_name %>
      <%= f.input :first_name %>
      <%= f.input :mobile_contact %>
      <%= f.input :address %>
      <%= f.input :photo, as: :file %>

    <div class="row">
          
      <div class="large-3 small-3 columns"></div>
      <div class="large-9 small-9 columns">
        <%= f.button :submit, t(:next_step) %>
        <%#= link_to 'Next Step', wizard_path(:create_organization), class: "button" %>
      </div>
    </div>
    <% end %>

  </div>
</div>
