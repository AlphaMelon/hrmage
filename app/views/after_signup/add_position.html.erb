<%= render "breadcrumbs", breadcrumbs_step: "position"%>

<div class="row">
  <div class="large-8 columns">
    <fieldset>
      <legend><%= t :add_position %></legend>
      <div class="panel"><%= t :after_signup_add_position %></div>
      <%= simple_form_for @position, wrapper: :custom, url: wizard_path, method: "put" do |f| %>
        <%= f.input :name, :autofocus => true %>
        <%= f.input :monthly_max_claims, type: :number %>
        <%= f.input :can_approve_leave, as: :select, include_blank: false %>
        <%= f.input :can_approve_claim, as: :select, include_blank: false %>
        
        <div class="row">
          <div class="large-3 small-3 columns"></div>
          <div class="large-9 small-9 columns"><%= f.button :submit, t(:next_step) %></div>
        </div>
      <% end %>
    </fieldset>
  </div>
</div>
