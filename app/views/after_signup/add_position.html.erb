<div class="row">
  <div class="large-12 columns">
    <%= render "breadcrumbs", breadcrumbs_step: "position"%>
  </div>
</div>

<div class="row">
  <div class="large-6 columns">
    <h3><%= t :add_position %></h3>
    <%= simple_form_for @position, url: wizard_path, method: "put" do |f| %>
      <%= f.input :name, :autofocus => true %>
      <%= f.input :max_leaves_seconds %>
      <%= f.input :max_claims, type: :number %>
      <%= f.input :can_approve_leave, as: :select, include_blank: false %>
      <%= f.input :can_approve_claim, as: :select, include_blank: false %>
      
      <div class="row">
        <div class="large-3 small-3 columns"></div>
        <div class="large-9 small-9 columns"><%= f.button :submit, t(:next_step) %></div>
      </div>
    <% end %>

  </div>
</div>
