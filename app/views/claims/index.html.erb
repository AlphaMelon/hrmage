              <div class="row">
  <div class="large-12 columns">
    <h1><%= current_organization.name.capitalize %>'s employee's claims</h1>
    <h3>Pending Claims</h3>
    <table>
      <thead>
        <th>Name</th>
        <th>Subject</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Comment</th>
        <th>Recipit</th>
        <th>Action</th>
      </thead>
      <% @pending_claims.each do |pending_claim|%>
        <tr>
          <td><%= pending_claim.employee.last_name.capitalize %></td>
          <td><%= pending_claim.subject%></td>
          <td><%= pending_claim.date.to_date.strftime("%d/%m/%Y") %></td>
          <td><%= number_to_currency(pending_claim.amount_cents.to_f/100, precision: 2) %></td>
          <td><%= pending_claim.comment %></td>
          <td>
            <% if pending_claim.image? %>
              <%= link_to image_tag(pending_claim.image_url(:thumb), class: "th"), image_path(pending_claim.image_url)  %>
            <% else %>
              <%= image_tag("not_available.jpg", size: "50x50", class: "th")%>
            <% end %>
          </td>
          <td>
          <a href="#" data-dropdown="drop_<%=pending_claim.id %>" class="tiny button dropdown">Details</a>
            <ul id="drop_<%=pending_claim.id %>" data-dropdown-content class="f-dropdown">
              <li>
                <%= link_to " Approve", organization_claim_path(current_organization, pending_claim, claim: {status: "Approved"}), method: "patch", class: "fi-check"%>
              </li>
              <li>
                <%= link_to " Reject", organization_claim_path(current_organization, pending_claim, claim: {status: "Rejected"}), method: "patch", class: "fi-x"%>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>
    </table>
    
    <h3>History</h3>
    <table>
      <thead>
        <th>Name</th>
        <th>Subject</th>
        <th>Date</th>
        <th>Amount</th>
        <th>Comment</th>
        <th>Recipit</th>
        <th>Status</th>
        <th>Action by</th>
      </thead>
      <% @claims.each do |claim|%>
        <tr>
          <td><%= claim.employee.last_name.capitalize %></td>
          <td><%= claim.subject%></td>
          <td><%= claim.date.to_date.strftime("%d/%m/%Y") %></td>
          <td><%= number_to_currency(claim.amount_cents.to_f/100, precision: 2) %></td>
          <td><%= claim.comment %></td>
          <td>
            <% if claim.image? %>
              <%= link_to image_tag(claim.image_url(:thumb), class: "th"), image_path(claim.image_url)  %>
            <% else %>
              <%= image_tag("not_available.jpg", size: "50x50", class: "th")%>
            <% end %>
          </td>
          <td><%= claim.status %></td>
          <td><%= claim.action_by.nil? ? "No Action Yet" : claim.action_by.profile.last_name %></td>
          </td>
        </tr>
      <% end %>
    </table>

  </div>
</div>

