<div class="row">
  <div class="large-6 columns">
    <div class="department-container">
      <ul class="breadcrumbs">
        <li><%=link_to "organization", organizations_path %></li>
        <li><%= link_to @organization.name, organization_path(@organization)%></li>
        <li class="current">Department List</li>
      </ul>
    </div>
    <h2>Department's List</h2>
    <table>
      <thead>
        <th>Name</th>
        <th></th>
        <th></th>
      </thead>
      <% @departments.each do |department|%>
        <tr>
          <td><%= department.name%></td>
          <td><%= link_to "Show", organization_department_path(@organization, department)%></td>
          <td><%= link_to "Edit", edit_organization_department_path(@organization, department)%></td>
        </tr>
      <% end %>
    </table>
    <%= link_to "New Department", new_organization_department_path %>
  </div>
</div>
