<div class="row">
  <div class="large-9 large-centered small-12 columns">
    <div class="devise-container">
      <fieldset>
        <legend><h2><%= t :forget_your_password %></h2></legend>
        <%= simple_form_for(resource, wrapper: :custom, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
          <%= f.error_notification %>
          <%= f.input:email, :autofocus => true %>

          <div class="form-inputs">
            <div class="row">
              <div class="large-3 small-3 columns"></div>
              <div class="large-9 small-9 columns">
                <div class="form-actions">
                  <%= f.button :submit, t(:send_me_reset_password_instructions) %>
                </div>
                <%= render "devise/shared/links" %>
              </div>
            </div>
          </div>
        <% end %>
      </fieldset>
    </div>

  </div>
</div>