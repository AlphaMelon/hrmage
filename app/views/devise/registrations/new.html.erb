<div class="row">
  <div class="large-9 large-centered small-12 columns">
    <div class="devise-container">
      <fieldset>
        <legend><h2><%= t :sign_up %></h2></legend>
        <%= simple_form_for(resource, wrapper: :custom, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <%= render '/shared/error_message', object: f.object %>

          <div class="form-inputs">
            <%= f.input :email, :autofocus => true %>
            <%= f.input :password %>
            <%= f.input :password_confirmation %>

            <div class="row">
              <div class="large-3 small-3 columns"></div>
              <div class="large-9 small-9 columns">
                <div class="form-actions">
                  <%= f.button :submit, "Sign up" %>
                  or
                  <%= render "devise/shared/links" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </fieldset>

    </div>
  </div>
</div>
