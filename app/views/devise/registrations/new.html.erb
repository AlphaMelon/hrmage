<div class="row">
  <div class="large-8 large-centered columns">
    <div class="devise-container">
      <h2>Sign up</h2>

      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <div class="row">
            <div class="large-4 small-3 columns">
              <%= label_tag(:email, "Email", class: "email optional left inline", for: "account_email") %>
            </div>
            <div class="large-8 small-9 columns">
              <%= f.input_field :email, :autofocus => true %>
            </div>
            <div class="large-4 small-3 columns">
              <%= label_tag(:password, "Password", class: "password optional left inline", for: "account_password")%>
            </div>
            <div class="large-8 small-9 columns">
              <%= f.input_field :password %>
            </div>
            <div class="large-4 small-3 columns">
              <%= label_tag(:password_confirmation, "Password confirmation", class: "password optional", for: "account_password_confirmation") %>
            </div>
            <div class="large-8 small-9 columns">
              <%= f.input_field :password_confirmation %>
            </div>
          </div>
          <div class="large-4 small-3 columns"></div>       
          <div class="large-8 small-9 columns">
            <div class="form-actions">
              <%= f.button :submit, "Sign up" %>
              or 
              <%= render "devise/shared/links" %>
            </div>
          </div>       
        </div>
      <% end %>

    </div>

  </div>
</div>