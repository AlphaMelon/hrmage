<div class="row">
  <div class="large-9 large-centered small-12 columns">
    <div class="devise-container">
      <fieldset>
        <legend><h2><%= t :sign_in %></h2></legend>
        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <div class="form-inputs">
             <%= f.input :email, :required => false, :autofocus => true, wrapper: :custom %>
             <%= f.input :password, :required => false, wrapper: :custom %>
              <div class="row">
                <div class="large-3 small-3 columns">
                  
                </div>
                <div class="large-9 small-9 columns boolean">
                  <%= f.input :remember_me, :as => :boolean, input_html: {class: 'left inline'} if devise_mapping.rememberable? %>
                  <div class="form-actions">
                    <%= f.button :submit, "Sign in" %>
                  </div>
                </div>
            </div>
          </div>
        <% end %>

        <div class="row">
          <div class="large-3 small-3 columns"></div>
          <div class="large-9 small-9 columns">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </fieldset>
    </div>

  </div>
</div>