<div class="content-header">
  <div class="row">
    <div class="large-9 large-centered columns">
      <h2>
        <%= @employee.full_name %>'s <%= t :settings%>
        <%= link_to t(:back), :back, class: "button success right" %>
      </h2>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-9 large-centered columns">
    <table class="large-12">
      <thead>
        <th><%= t :leave_type %></th>
        <th><%= t :available_leave_remaining %></th>
        <th><%= t :action %></th>
      </thead>
      <tbody>
        <% @employee_variables.each do |employee_variable|%>
          <tr>
            <td><%= employee_variable.leave_type.name%></td>
            <td><%= employee_variable.available_leaves_seconds/24/60/60%> <%= t :days %></td>
            <td><%= link_to t(:edit), edit_organization_employee_employee_variable_path(current_organization, @employee, employee_variable), class: "fi-pencil" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>