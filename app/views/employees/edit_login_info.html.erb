<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <div class="large-6 columns">

        <%= simple_form_for(@account, url: organization_employee_edit_login_info_path) do |f| %>
          <%= f.input :email %>
          <%= f.input :password, placeholder: "leave blank if don't want update" %>
          <%= f.input :role, collection: ["Admin", "Employee"], 
          selected: AccountOrganization.where(account_id: @account.id, organization_id: @organization.id).first.role %>
          <%= f.button :submit %>
        <% end %>

      </div>
    </div>
  </div>
</div>
