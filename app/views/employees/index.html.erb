<div class="row">
  <div class="large-12 columns">
    <h2>Employee's List</h2>
    <table>
      <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>E-mail</th>
        <th>Mobile Contact</th>
        <th>Address</th>
        <th>Department</th>
        <th></th>
        <th></th>
      </tr>
      <% @users.each do |user|%>
        <tr>
          <td><%= user.employee.last_name%></td>
          <td><%= user.employee.first_name%></td>
          <td><%= user.email%></td>
          <td><%= user.employee.mobile_contact%></td>
          <td><%= user.employee.address%></td>
          <td><%= !user.employee.department.nil? ? user.employee.department.name : "No Department Assigned"%>
          <td><%= link_to "Show", employee_path(user.employee)%></td>
          <td><%= link_to "Edit", edit_employee_path(user.employee)%></td>
        </tr>
      <% end %>
    </table>
    <%= link_to "New Employee", new_employee_path %>
  </div>
</div>
