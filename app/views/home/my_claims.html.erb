<div class="row">
  <div class="large-12 small-12 columns">
    <h1>My Claims</h1>
  </div>
  
  <hr>

  <div class="large-12 small-12 columns">
    <h6>Available Claims</h6>
  </div>
  <div class="large12 columns">
    <div class="large-2 small-2 columns">
      <h5 class="text-left"><%= current_account.profile.available_claims%>/<%= current_account.profile.position.max_claims%></h5>
    </div>
    <div class=" progress success large-10 small-10 columns">
      <span class="meter" style="width: <%= @claims_remaining_percentage%>%"></span>
    </div>
  </div>
  <hr>
</div>

<div class="row">
  <div class="large-12 columns">
    <h2>History</h2>
    <table>
      <thead>
        <td>Subject</td>
        <td>Date</td>
        <td>Amount</td>
        <td>Comment</td>
        <td>Status</td>
        <td>Action by</td>
        <td></td>
      </thead>
      <% @my_claims.each do |claim| %>
      <tbody>
        <td><%= claim.subject %></td>
        <td><%= claim.date.to_date.strftime("%d/%m/%Y") %></td>
        <td><%= humanized_money_with_symbol claim.amount %></td>
        <td><%= claim.comment %></td>
        <td><%= claim.status %></td>
        <td><%= claim.action_by.nil? ? "No Action Yet" : claim.action_by.profile.last_name %></td>
        <td>
          <a href="#" data-dropdown="drop2" class="tiny button dropdown">Details</a>
          <ul id="drop2" data-dropdown-content class="f-dropdown">
            <li><a href="#">test</a></li>
          </ul>
        </td>
      </tbody>
      <%end%>
    </table>
  </div>
</div>
