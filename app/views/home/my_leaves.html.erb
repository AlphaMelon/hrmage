<% if !current_account.profile.nil? && !current_account.profile.position.nil?%>
  <div class="row">
    <div class="large-12 small-12 columns">
      <h1><%= t :my_leaves %></h1>
    </div>
    
    <hr>

    <div class="large-12 small-12 columns">
      <h6><%= t :available_leaves %></h6>
    </div>
    <div class="large-12 columns">
      <div class="large-2 small-2 columns">
        <h5 class="text-left"><%#= current_account.profile.available_leaves_seconds%>/<%#= current_account.profile.position.max_leaves_seconds%></h5>
      </div>
      <div class=" progress success large-10 small-10 columns">
        <span class="meter" style="width: <%= @leaves_remaining_percentage%>%"></span>
      </div>
    </div>
    <hr>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <h2><%= t :history %></h2>
      <table>
        <thead>
          <td><%= t :type %></td>
          <td><%= t :reason %></td>
          <td><%= t :duration%></td>
          <td><%= t :when %></td>
          <td><%= t :status %></td>
          <td><%= t :action %></td>
        </thead>
        <% @my_leaves.each do |leave| %>
        <tbody>
          <td><%= leave.leave_type.name %></td>
          <td><%= leave.comment %></td>
          <td><%= (leave.duration_seconds)/60/60/24 %> Days</td>
          <td><%= leave.start_date.to_date.strftime("%d/%m/%Y") %> - <%= (leave.start_date.to_date + ((leave.duration_seconds)/60/60/24).days).strftime("%d/%m/%Y") %></td>
          <td><%= leave.status %></td>
          <td>
            <a href="#" data-dropdown="drop2" class="tiny button dropdown"><%= t :details %></a>
            <ul id="drop2" data-dropdown-content class="f-dropdown">
              <li><a href="#">test</a></li>
            </ul>
          </td>
        </tbody>
        <%end%>
      </table>
    </div>
  </div>

<% else %>
  <div class="row">
    <div class="large-12 columns">
      <p><%= t :my_leaves_error_msg %></p>
    </div>
  </div>
<% end %>
