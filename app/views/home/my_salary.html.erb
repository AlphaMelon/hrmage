<div class="row">
  <div class="large-12 small-12 columns">
    <h1><%= t :my_salary %></h1>
  </div>
  <hr>
</div>

<div class="row">
  <div class="large-12 columns">
    <table class="large-12">
      <thead>
        <th><%= t :working_date %></th>
        <th><%= t :base_amount%></th>
        <th><%= t :commission %></th>
        <th><%= t :action %></th>
      </thead>
      <tbody>
        <% @my_salarys.each do |salary| %>
        <tr>
          <td><%= salary.date.to_date %></td>
          <td><%= humanized_money_with_symbol salary.base_salary %></td>
          <td><%= humanized_money_with_symbol salary.commission %></td>
          <td><%= link_to t(:show), "my_salary_show/#{salary.id}", 
          class: "fi-eye", id: "show_my_salary"%></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
