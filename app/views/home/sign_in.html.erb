<div class="row">
  <div class="large-6 large-centered columns panel">
    <div class="devise-container">
      <h2>Sign in</h2>
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="row">
              <div class="large-3 small-3 columns">
                <%= label_tag(:email, "Email", class: "email optional left inline", for: "account_email")%>
              </div>
              <div class="large-9 small-9 columns">
                <div class="large-12">
                  <%= f.input_field :email, :required => false, :autofocus => true %>
                </div>
              </div>
              <div class="large-3 small-3 columns">
                <%= label_tag(:password, "Password", class: "password optional left inline", for: "account_password")%>
              </div>
              <div class="large-9 small-9 columns">
                <div class="large-12">
                  <%= f.input_field :password, :required => false %>
                </div>
              </div>
              <div class="large-3 small-3 columns">
                
              </div>
              <div class="large-9 small-9 columns">
                <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
                <div class="form-actions">
                  <%= f.button :submit, "Sign in" %>
                </div>
              </div>
          </div>
        </div>
      <% end %>

      <div class="row">
        <div class="large-3 small-3 columns"></div>
        <div class="large-9 small-9 columns">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

  </div>
</div>