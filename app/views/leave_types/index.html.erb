<div class="content-header">
  <div class="row">
    <div class="large-9 large-centered columns">
      <h2>
        <%= t :leave_types_list %>
        <%= link_to "#{image_tag('icon/Flaticon_2664.png', 
        width: 16, height: 16)} #{t(:new_leave_type)}".html_safe, 
        new_organization_leave_type_path(current_organization), 
        class: "button success right",
        id: "new_leave_type"%>
      </h2>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <table class="large-12">
      <thead>
        <th><%= t :name %></th>
        <th><%= t :approval_needed %></th>
        <th><%= t :description %></th>
        <th><%= t :affected_entity %></th>
        <th><%= t :type %></th>
        <th><%= t :default_max_leaves %></th>
        <th><%= t :colour %></th>
        <th><%= t :action %></th>
      </thead>
      <tbody>
      <% @leave_types.each do |leave_type|%>
        <tr>
          <td><%= leave_type.name %></td>
          <td><%= leave_type.approval_needed? ? 'Yes' : 'No' %></td>
          <td><%= leave_type.description %></td>
          <td><%= leave_type.affected_entity.map(&:capitalize).to_sentence %></td>
          <td><%= leave_type.type.delete("Leave") %></td>
          <td><%= leave_type.default_count_seconds/24/60/60 %> <%= t :days %></td>
          <td bgcolor="<%= leave_type.colour %>"></td>
          <td><%= link_to t(:edit), edit_organization_leave_type_path(current_organization, leave_type), class: "fi-pencil" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
