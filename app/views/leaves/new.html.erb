<div class="row">
  <div class="large-12 columns">
    <fieldset class="large-8">
      <blockquote><%= t :leaves_description %></blockquote>
      <legend><%= t :applying_leaves %></legend>
        <% if current_organization.leave_types.count != 0 %>
          <%= simple_form_for [@organization, @leave], wrapper: :custom do |f| %>
            <%= render '/shared/error_message', object: f.object %>
            <%= f.input :start_date, as: :string, autocomplete: :off %>
            <%= f.input :duration_seconds %>
            <%= f.input :leave_type_id, collection: @leave_types, include_blank: false %>
            <%= f.input :comment, as: :text %>
            
            <div class="row">
              <div class="large-3 small-3 columns"></div>
              <div class="large-9 columns">
                <%= f.button :submit, t(:apply_leave), class: "button success" %>
              </div>
            </div>

            </div>
          <% end %>
        <% else %>

          <p><%= t :leaves_error_msg %></p>
          <% if can? :manage, :all %>
            <p><%= t :leaves_admin_error_msg %></p>
          <% end %>
        <% end %>
    </fieldset>
  </div>
</div>
