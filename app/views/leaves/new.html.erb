<div class="row">
  <div class="large-12 columns">
    <h3>Applying Leaves</h3>
    <%= simple_form_for [@organization, @leave] do |f| %>
      <% if @leave.errors.any? %>
        <div id="error_explanation">
	        <h2><%= pluralize(@leave.errors.count, "error") %> prohibited this worksheet from being saved:</h2>

	        <ul>
		        <% @leave.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		        <% end %>
	        </ul>
        </div>
      <% end %>
      
      <%= f.input :start_date, as: :date, start_year: Date.today.year, end_year: Date.today.year + 10 %>
      <%= f.input :end_date, as: :date, start_year: Date.today.year, end_year: Date.today.year + 10  %>
      <%= f.input :leave_type, collection: ["Annual", "Medical"], include_blank: false %>
      <%= f.input :comment %>
      <%= f.button :submit, "Apply Leave" %>
    <% end %>
  </div>
</div>
