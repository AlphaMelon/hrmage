<div class="row">
  <div class="large-6 small-12 columns">
     <%= simple_form_for @organization do |f| %>
     
      <% if @organization.errors.any? %>
        <div id="error_explanation">
	        <h2><%= pluralize(@organization.errors.count, "error") %> prohibited this worksheet from being saved:</h2>

	        <ul>
		        <% @organization.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		        <% end %>
	        </ul>
        </div>
      <% end %>
      
      <div class="row">
        <div class="large-3 small-3 columns">
          <%= label_tag(:name, "Name", class: "string optional left inline", for: "organization_name") %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.input_field :name, :autofocus => true %>
        </div>
        <div class="large-3 small-3 columns">
          <%= label_tag(:domain, "Domain", class: "string optional left inline", for: "organization_domain") %>
        </div>
        <div class="large-9 small-9 columns">
          <%= f.input_field :domain %>
        </div>
        <div class="large-3 small-3 columns"></div>
        <div class="large-9 small-9 columns"><%= f.button :submit %></div>
      </div>
    <% end %>

  </div>
</div>
