<div class="row">
  <div class="large-12 columns">
    <table>
      <thead>
        <th>Name</th>
        <th>Domain</th>
        <th></th>
      </thead>
      <tbody>
        <td><%= @organization.name%></td>
        <td><%= @organization.domain%></td>
        <td><%= link_to "Edit", edit_organization_path(@organization), id: "edit_organization" %></td>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <h2><%= @organization.name.capitalize %>'s Departments</h2>
    <table>
      <thead>
        <th>Name</th>
        <th></th>
      </thead>
      <% @organization.departments.each do |department|%>
        <tr>
          <td><%= department.name%></td>
          <td><%= link_to "Edit", edit_organization_department_path(@organization, department)%></td>
        </tr>
      <% end %>
    </table>
    <%= link_to "Department list", organization_departments_path(@organization) %>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <h2>Accounts with access to <%= @organization.name %></h2>
    <table>
      <tr>
        <th>Email</th>
        <th>Role</th>
        <th></th>
      </tr>
      <% @organization.account_organizations.each do |acc_org|%>
        <tr>
          <td><%= acc_org.account.email %></td>
          <td><%= acc_org.role %></td>
          <th><%= link_to "Remove link", organization_account_organization_path(@organization, acc_org), method: :delete, data: { confirm: 'Are you sure?' }%></th>
        </tr>
      <% end %>
    </table>
    <%= link_to "Add more account to #{@organization.name}", new_organization_account_organization_path(@organization)%>
  </div>
</div>  

<div class="row">
  <div class="large-12 columns">
    <h2><%= @organization.name.capitalize %>'s Employees</h2>
    <table>
      <tr>
        <th>Last Name</th>
        <th>First Name</th>
        <th>E-mail</th>
        <th>Mobile Contact</th>
        <th>Address</th>
        <th></th>
        <th></th>
      </tr>
      <% @organization.employees.each do |employee|%>
        <tr>
          <td><%= employee.last_name %></td>
          <td><%= employee.first_name%></td>
          <td><%= employee.account.email if !employee.account.nil?%></td>
          <td><%= employee.mobile_contact %></td>
          <td><%= employee.address%></td>
          <td><%= link_to "Edit", edit_organization_employee_path(@organization, employee)%></td>
        </tr>
      <% end %>
    </table>
    <%= link_to "Employee list", organization_employees_path(@organization) %>
  </div>
</div>
