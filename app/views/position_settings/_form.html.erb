<div class="row">
  <div class="large-12 small-12 columns">
     <%= simple_form_for [current_organization, @position, @position_setting], wrapper: :custom do |f| %>
      <%= render '/shared/error_message', object: f.object %>
      <%= f.association :leave_type, collection: current_organization.leave_types, include_blank: false %>
      <%= f.input :max_leaves_seconds %>
      
      <div class="row">
        <div class="large-3 small-3 columns"></div>
        <div class="large-9 small-9 columns"><%= f.button :submit, class: "button success" %></div>
      </div>
    <% end %>

  </div>
</div>
