<div class="content-header">
  <div class="row">
    <div class="large-9 large-centered columns">
      <h2>
        <%= @position.name %>'s <%= t :settings %>
        <%= link_to "#{image_tag('icon/Flaticon_2664.png', width: 16, height: 16)} #{t(:new_setting)}".html_safe, new_organization_position_position_setting_path(current_organization, @position), class: "button success right" %>
      </h2>
    </div>
  </div>
</div>
<div class="row">
  <div class="large-12 columns">
    <table class="large-12">
      <thead>
        <th><%= t :leave_type %></th>
        <th><%= t :max_leaves %></th>
        <th><%= t :action %></th>
      </thead>
      <tbody>
      <% @position_settings.each do |position_setting|%>
        <tr>
          <td><%= position_setting.leave_type.name %></td>
          <td><%= position_setting.max_leaves_seconds/24/60/60 %> <%= t :days%></td>
          <td>
          <a href="#" data-dropdown="drop_<%= position_setting.id %>" class="tiny button dropdown"><%= t (:details)%></a><br>
            <ul id="drop_<%= position_setting.id %>" data-dropdown-content class="f-dropdown">
              <li>
                <%= link_to t(:edit), edit_organization_position_position_setting_path(current_organization, @position, position_setting), class: "fi-pencil", id: "edit_position_setting" %>
              </li>
              <li>
                <%= link_to t(:delete),organization_position_position_setting_path(current_organization, @position, position_setting), class: "fi-trash", id: "delete_position_setting", method: :delete, data: { confirm: t(:are_you_sure) } %>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>