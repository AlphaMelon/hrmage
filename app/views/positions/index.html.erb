<div class="content-header">
  <div class="row">
    <div class="large-9 large-centered columns">
      <h2>
        <%= t :positions_list %>
        <%= link_to "#{image_tag('icon/Flaticon_2664.png', width: 16, height: 16)} #{t(:add_new_position)}".html_safe, new_organization_position_path(current_organization), class: "button success right" %>
      </h2>
    </div>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <table class="large-12">
      <thead>
        <th><%= t :name %></th>
        <th><%= t :monthly_max_claims %></th>
        <th><%= t :action %></th>
      </thead>
      <tbody>
      <% @positions.each do |position|%>
        <tr>
          <td><%= position.name %></td>
          <td><%= humanized_money_with_symbol position.monthly_max_claims %></td>
          <td>
          <a href="#" data-dropdown="drop_<%=position.id %>" class="tiny button dropdown"><%= t :details %></a>
            <ul id="drop_<%=position.id %>" data-dropdown-content class="f-dropdown">
              <li><%= link_to t(:show), organization_position_path(current_organization, position), class: "fi-eye" %></li>
              <li>
                <%= link_to t(:edit), edit_organization_position_path(current_organization, position), class: "fi-pencil" %>
              </li>
              <li>
                <%= link_to t(:delete), organization_position_path(current_organization, position), id: 'delete_position', class: "fi-trash", method: :delete, data: { confirm: t(:are_you_sure) }%>
              </li>
              <li>
                <%= link_to t(:b_settings), organization_position_position_settings_path(current_organization, position), class: "fi-widget" %>
              </li>
            </ul>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
