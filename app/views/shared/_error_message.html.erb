<% if object.errors.any? %>
   <div class="alert-box alert">
     <h3><%= t :the_form_contains %> <%= pluralize(object.errors.count, "error") %>.</h3>

      <ul class="disc">
       <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
       <% end %>
     </ul>
   </div>
<%end%>
