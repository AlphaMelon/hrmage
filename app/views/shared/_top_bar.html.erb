<% if !current_organization.id.nil? %>
  <div class="contain-to-grid">
    <nav class="top-bar" data-topbar>
      <ul class="title-area">
        <li class="name hide-for-large">
          <h1><%= link_to current_organization.name || t(:organization) %></h1>
        </li>

        <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
        <li class="toggle-topbar menu-icon">
          <a href="#">
            <span><%= t :menu %></span>
          </a>
        </li>
      </ul>

      <section class="top-bar-section">     
        <!-- Right Nav Section -->
        <ul class="right">
          <li class="divider"></li>
          <% if account_signed_in? %>
            <li class="has-dropdown">
              <a href="#"><i class="fi-lightbulb large"></i></a>
            </li>
            <li class="divider"></li>
            <li class="has-dropdown">
              <a href="#"><%= t :hello %> <%= !current_employee.nil? ? current_employee.name_with_initial : t(:new_user) %></a>
              <ul class="dropdown">
                <li><%= link_to t(:view_my_profile), account_path(current_account) %></li>
                <li><%= link_to t(:change_my_password), edit_account_registration_path %></li>
                <li><%= link_to t(:logout), destroy_account_session_path, method: :delete %></li>
              </ul>
            </li>
            
          <% else %>
            <li><%= link_to t(:sign_in), account_session_path %></li>
          <% end %>
        </ul>

        <!-- Left Nav Section -->
        <ul class="left">
          <%if account_signed_in? %>
            <% if can? :manage, :all %>
              <li class="has-dropdown">
                <%= link_to current_organization.name || t(:organization), organizations_path %>
                <ul class="dropdown">
                  <% current_account.organizations.each do |org| %>
                    <li><%= link_to org.name.capitalize, host: org.domain %></li>
                  <% end %>
                  <li><%= link_to t(:add_new_organization), new_organization_path %></li>
                </ul>
              </li>
              <li class="divider"></li>
            <% else %>
              <li><%= link_to current_organization.name || t(:organization), root_path %></li>
            <% end %>
          <% end %>
        </ul>
      </section>
    </nav>
  </div>
<% end %>
