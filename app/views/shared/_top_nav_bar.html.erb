<% if !current_organization.id.nil? && (can? :manage, current_organization) %>
  <div class="row">

    <div class="large-2 hide-for-small columns">
      <div class="logo">
        <%= link_to root_path do %>
          <%= image_tag('logo/hrmerge-logo.jpg') %>
        <%end%>
      </div>
    </div>

    <div class="large-8 columns">
      <div class="top-nav-bar">
        <% if (!@organizations.nil? || !@organization.nil?) && session[:admin] %>
          <%= render "shared/admin_nav_bar" %>
        <% elsif (!@organizations.nil? || !@organization.nil?) && session[:employee] %>
          <%= render "shared/normal_nav_bar" %>
        <%end%>
      </div>
    </div>

    <div class="large-2 columns">
      <div class="user-panel">
        <ul class="side-nav">
          <li><%= link_to "Admin", admin: true %></li>
          <li><%= link_to "Normal", employee: true %></li>
        </ul>
      </div>
    </div>
  </div>

<% elsif !current_organization.id.nil? %>
  <div class="row">

    <div class="large-2 hide-for-small columns">
      <div class="logo">
        <%= link_to root_path do %>
          <%= image_tag('logo/hrmerge-logo.jpg') %>
        <%end%>
      </div>
    </div>

    <div class="large-10 columns">
      <div class="top-nav-bar">
        <ul class="inline-list">
          <li><%= link_to "Leave", organization_leaves_path(current_organization) %></li>
          <li><a href="#">Salary</a></li>
          <li><%= link_to "Claims",  organization_claims_path(current_organization), id: "organization_claims"%></li>
        </ul>
      </div>
    </div>
  </div>
<%end%>
